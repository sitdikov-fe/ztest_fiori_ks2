<mvc:View
	controllerName="ztest_fiori_ks.controller.SmartTable"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable">
	<!-- <smartFilterBar:SmartFilterBar
		id="oSelectFilter"
		entitySet="ztestStr001Set"
		persistencyKey="SmartFilter_Explored"
		considerAnalyticalParameters="true">
		<smartFilterBar:layoutData>
			<FlexItemData shrinkFactor="0" />
		</smartFilterBar:layoutData>
	</smartFilterBar:SmartFilterBar> -->
	<smartTable:SmartTable
		id="oSelectData"
		smartFilterId="smartFilterBar"
		tableType="ResponsiveTable"
		editable="true"
		editTogglable="true"
		entitySet="ztestStr001Set"
		useVariantManagement="true"
		useTablePersonalisation="true"
		header="Позиции документа"
		showRowCount="true"
		useExportToExcel="false"
		enableAutoBinding="true"
		tableBindingPath="oModel"
		initiallyVisibleFields="Id,Name,Nametype,Quantity,Price,Fullprice,Storege,Quanstorage"
		persistencyKey="SmartTablePKey" >
		<smartTable:customToolbar>
			<OverflawToolbar design="Transparent">
				<ToolbarSpacer/>
				<OverflawToolbarButton icon="sap-icon://save" press="onSave" tooltip="Save"/>
				<OverflawToolbarButton icon="sap-icon://add" press="onAddRow" tooltip="Add new record"/>
				<OverflawToolbarButton icon="sap-icon://delete" press="onDelete" tooltip="Delete record(s)"/>
			</OverflawToolbar>
		</smartTable:customToolbar>
	</smartTable:SmartTable>
</mvc:View>